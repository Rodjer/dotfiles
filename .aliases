# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Always use color output for `ls`
if [[ "$OSTYPE" =~ ^darwin ]]; then
  alias ls="command ls -G"
else
  alias ls="command ls --color"
  export LS_COLORS='no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'
fi

# Long form
alias l="ls -Flh"
alias ll="l"
# List all files
alias la="ls -Flah"
# List only directories
alias lsd='ls -Flh | grep "^d"'
# Order by last modified, long form
alias lt="ls -Flht"
# Order by last modified, long form, all files
alias lat="ls -Flaht"
# Order by file size, long form, all files
alias las="ls -FlahS"

# Always use N (line numbers) and M (more detailed prompt, including file position)
alias less="less -NM"

# Enable aliases to be sudo’ed
alias sudo='sudo '

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en1"
alias ips="ifconfig -a | grep -o 'inet6\? \(\([0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+\)\|[a-fA-F0-9:]\+\)' | sed -e 's/inet6* //'"

# Enhanced WHOIS lookups
alias whois="whois -h whois-servers.net"

# Flush Directory Service cache
alias flushdns="dscacheutil -flushcache"

# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"

# View HTTP traffic
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""

# ps w/ grep
alias pgrep="ps auxwww | grep"

# OS X specific aliases
if [[ "$OSTYPE" =~ ^darwin ]]; then
  # Empty the Trash on all mounted volumes and the main HDD
  # Also, clear Apple’s System Logs to improve shell startup speed
  alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"

  # top default ordered by CPU
  alias top="top -o cpu"

  alias st="/Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl"
  alias macports-clean="sudo port clean --all installed && sudo port -f uninstall inactive"
fi

# One of @janmoesen’s ProTip™s
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
  alias "$method"="lwp-request -m '$method'"
done

# Apache shortcuts
alias ht="cd $HTDOCS"
alias htstop="sudo /usr/bin/env apachectl stop"
alias htstart="sudo /usr/bin/env apachectl start"
alias htrestart="sudo /usr/bin/env apachectl restart"

# Mysql shortcuts
alias mydump="mysqldump $MYCRED --default-character-set=utf8"
alias my="mysql $MYCRED --default-character-set=utf8"
alias myadmin="mysqladmin $MYCRED"

# Nginx shortcuts
alias nginx-start="sudo nginx"
alias nginx-stop="sudo nginx -s stop"
alias nginx-quit="sudo nginx -s quit"
alias nginx-reload="sudo nginx -s reload"